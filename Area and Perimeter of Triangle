import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        int d=sc.nextInt();
        int e=sc.nextInt();
        System.out.printf("Area of Triangle is %.2f\n",(float)(0.5*a*b));
        System.out.printf("Perimeter of Triangle is %.2f",(float)(c+d+e));
        
        
    }
}
