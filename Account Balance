import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int bal=sc.nextInt();
        int c=sc.nextInt();
        switch(c){
            case 1:
                 int amt=sc.nextInt();
                bal=bal+amt;
                System.out.println(bal);
                break;
            case 2:
                int am=sc.nextInt();
                if(bal>am){
                    bal=bal-am;
                    System.out.println(bal);
                }
                else{
                    System.out.println("Insufficient Balance");
                }
                break;
            default:
                System.out.println("Invalid Input");
                
        }
        
    }
}
